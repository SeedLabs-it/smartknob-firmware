{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "FLASH RELEASE",
            "type": "shell",
            "command": "[ -x ./software/release/release_flash.sh ] || sudo chmod +x ./software/release/release_flash.sh && [ -x ./software/release/download_latest.sh ] || sudo chmod +x ./software/release/download_latest.sh && ./software/release/release_flash.sh",    // Path to your shell script
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",        // Use a dedicated terminal panel
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}",   // Ensure the working directory is set correctly
                "shell": {
                    "executable": "/bin/bash",  // Use bash to ensure proper shell script execution
                    "args": ["-c"]
                },
                "env": {
                    "PLATFORMIO_CLI": "${env:PLATFORMIO_CLI}"  // Ensure PlatformIO environment is used
                }
            }
        }
    ]
}